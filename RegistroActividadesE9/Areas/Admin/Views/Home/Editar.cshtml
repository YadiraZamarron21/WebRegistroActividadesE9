@model RegistroActividadesE9.Models.ViewModels.AgregarDepartamentoViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/LayoutDepartamento.cshtml";
}

<main class="agg">
    <div class="containerAgregar">
        <h2>Editar Departamento</h2>
        <form action="~/Admin/Home/Editar" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input hidden asp-for="id" id="id" />

                <label for="nombre">Nombre:</label>
                <input type="text" asp-for="nombre" id="nombre" name="nombre" required>
            </div>
            <div class="form-group">
                <label for="usuario">Usuario:</label>
                <input type="text" asp-for="usuario" id="usuario" name="usuario" required>
            </div>
            <div class="form-group">
                <label for="contraseña">Contraseña:</label>
                <input type="password" asp-for="contraseña" id="contraseña" name="contraseña" required>
            </div>
            <div class="form-group">
                <label for="superior">Superior:</label>
                <input type="text" id="idsuperior" asp-for="idSuperior" name="idsuperior" required>
               @*  <select id="superior" name="superior" required>
                    <option value="">Seleccione un superior</option>
                    <option value="superior1">Superior 1</option>
                    <option value="superior2">Superior 2</option>
                    <option value="superior3">Superior 3</option>
                </select> *@
            </div>
            <p id="error">@Html.ValidationSummary(true)</p>
            <div class="form-group button-group">
                <input type="submit" class="accept-button" value="Editar">

              @*   <a href="#">
                    <input type="button" value="Confirmar">
                </a> *@
                <a href="~/Admin/Home">
                    <input type="button" class="cancel-button" value="Cancelar">
                </a>
            </div>
        </form>
    </div>
</main>
