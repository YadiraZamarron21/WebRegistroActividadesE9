@model RegistroActividadesE9.Models.ViewModels.DepartamentosViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/LayoutDepartamento.cshtml";
}
<main class="agg">
    <div class="containerAgregar">
        <h2>Agregar Departamento</h2>
        <form action="~/Admin/Home/Agregar" method="post">
            <div class="form-group">
                <label for="nombre">Nombre:</label>
                <input type="text" id="nombre" asp-for="nombre" name="nombre" required>
            </div>
            <div class="form-group">
                <label for="usuario">Usuario:</label>
                <input type="text" id="usuario" asp-for="usuario" name="usuario" required>
            </div>
            <div class="form-group">
                <label for="contrasena">Contraseña:</label>
                <input type="password" asp-for="contraseña" id="contrasena" name="contrasena" required>
            </div>
            <div class="form-group">
                <label for="superior">Superior:</label>
                <input type="text" id="superior" asp-for="idSuperior" name="superior" required>
                @*   <select id="superior" name="superior" required>
                <option value="">Seleccione un superior</option>
                <option value="superior1">Superior 1</option>
                <option value="superior2">Superior 2</option>
                <option value="superior3">Superior 3</option>
                </select> *@
            </div>
            <div class="form-group button-group">
                <input type="submit" class="accept-button" value="Aceptar">


                <a href="~/Admin/Home">
                    <input type="button" class="cancel-button" value="Cancelar">
                </a>
            </div>
        </form>
    </div>
</main>
