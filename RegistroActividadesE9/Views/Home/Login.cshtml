@model RegistroActividadesE9.Models.ViewModels.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="login">
<head>
    <meta charset="UTF-8">
    <link href="~/style2.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
</head>
<body class="login">
    <div class="login-box">
        <h2>Bienvenidos!</h2>
        <form action="~/iniciarSesion" method="post">
        
            <div class="user-box">
                <input asp-for="Username" type="email"  required="">
                <label>Username</label>
            </div>
            <div class="user-box">
                <input asp-for="Password" type="password"  required="">
                <label>Password</label>
            </div>
            <div class="button-container">
                <a> <input type="submit" value="Login" class="rounded-button"></a>
            </div>

            <p class="message">@Html.ValidationSummary(true)</p>
        </form>
    </div>
</body>
</html>
