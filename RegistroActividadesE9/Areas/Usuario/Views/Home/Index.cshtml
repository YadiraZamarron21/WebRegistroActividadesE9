@model IEnumerable<RegistroActividadesE9.Models.ViewModels.ActividadesViewModel>
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}
<main class="principal">

    <div class="container">
            <div class="department">

            @foreach (var item in Model)
            {
                <div class="department-name">@item.Departamento</div>

                @foreach (var x in Model)
                {
                    <div class="post multiple-images">
                        <h3>@x.titulo</h3>
                        <span class="date">@x.FechaCreacion</span>
                        <p>@x.Descripcion</p>
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQbCwtCvnKb4dlZEOWsLg9iwnjHIeTRSMrWfQ&usqp=CAU" alt="Evidencia en fotografía">
                    </div>
                }
            }
        </div>


    </div>

    <a class="floating-button" href="~/Usuario/Home/Agregar">
        <img id="img3" src="https://cdn-icons-png.flaticon.com/512/2740/2740600.png" />
    </a>

</main>